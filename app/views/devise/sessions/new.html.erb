<div class="container">
  <div class="row">
    <div class="col-md-5 align-self-center">
      <div class="card"  id="Login-card">
        <div class="card-body">
          <ul class="nav nav-tabs nav-fill" id="myTab" role="tablist">
          <li class="nav-item">
            <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">
              登入
          </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false">  註冊
            </a>
          </li>
        </ul>
        <div class="tab-content" id="myTabContent">
          <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
            <div id="login" style="padding: 10px;">
              <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                <div class="form-group">
                  <%= f.input :email,
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "email",placeholder: "電子郵件" }, label: "<i class='fas fa-user fa-fw'></i>Email(帳號)".html_safe %>
                </div>
                <div class="form-group">
                  <%= f.input :password,
                    required: true,
                    input_html: { autocomplete: "current-password",placeholder: "密碼" }, label: "<i class='fas fa-lock fa-fw'></i>密碼".html_safe %>
                </div>
                <div class="custom-control custom-checkbox" style="margin-bottom: 16px;">
                  <input name="user[remember_me]" type="hidden" value="0">
                  <input type="checkbox" class="custom-control-input" id="customCheck1" name="user[remember_me]" value="1">
                  <label class="custom-control-label" for="customCheck1">記住我</label>
                </div>
                <%= f.button :submit, "登入", id: "login-btn", class: "btn btn-block" %>
                <div id="socialmedia">
                  <h4>社群登入</h4>
                  <button type="button" class="btn btn-danger btn-block"><i class="fab fa-google fa-fw"></i>Google</button>
                </div>
              <% end %>
            </div>
          </div>
          <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">
            
          </div>
        </div>
        </div>
      </div>
    </div>
    <div class="col-md-7 align-self-end">
      <div class="container">
        <img src="<%= image_path('homepage-logo.png') %>" alt="" id="logo" height="100%" width="100%">
      </div>
    </div>
  </div>
</div>
<style>
  body{
      background-image: url('<%= image_path('homepagebg.png') %>');
      background-repeat: no-repeat;
      background-position:top -200px right -100px;
      background-color: #F9F9F9;
    }
</style>