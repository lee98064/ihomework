<div class="modal-header">
  <h5 class="modal-title" id="exampleModalLabel"><%= @testlist['title'] %></h5>
  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>
<div class="modal-body">
	描述：<%= simple_format(@testlist['describe']) %><br>
    開始日期： <%= @testlist['start'].strftime('%Y-%m-%d %T') %><br>
    結束日期： <%= @testlist['end'].strftime('%Y-%m-%d %T') %><br>
</div>
<div class="modal-footer">
	<% if @testlist.user_id == current_user.id %>
		<%= link_to '刪除', classroom_testlist_path(@classroom,@testlist) , class: "btn btn-danger", remote: true, method: :delete, data:{ confirm: "確定刪除嗎?"} %>
    <%= link_to '編輯', edit_classroom_testlist_path(@classroom,@testlist) , class: "btn btn-warning", remote: true %>
	<% end %>
	<button type="button" class="btn btn-secondary" data-dismiss="modal">關閉</button>
</div>