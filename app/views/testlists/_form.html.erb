<%= simple_form_for([@classroom, @testlist], remote: true) do |f|%>
  <div class="modal-body">
      <%= f.input :title, label: '標題:'%>
      <%= f.input :describe, label: '描述:' ,input_html: { rows: '5' }%>
      <%= f.input :start, label: '開始日期:', as: :datetime, html5: true %>
      <%= f.input :end, label: '結束日期:', as: :datetime, html5: true%>
      <%= f.input :color, label: '顏色', as: :color %>
  </div>
  <div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-dismiss="modal">取消</button>
    <%= f.button :submit, '儲存', class: 'btn btn-primary'%>
  </div>
<% end %>