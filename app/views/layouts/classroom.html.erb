<!DOCTYPE html>
<html>
  <head>
    <title><%= yield :web_title %></title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width" />
    <%= stylesheet_link_tag 'classroom', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'classroom', 'data-turbolinks-track': 'reload' %>
    <script src="https://kit.fontawesome.com/27049cdd6d.js" crossorigin="anonymous"></script>
    <!-- <script src="/js/uikit.min.js"></script> -->
    <!-- <script src="/js/uikit-icons.min.js"></script> -->
  </head>

  <body>
    <nav>
      <div id="nav-logo">
        <a href="/">所有教室</a>
      </div>
      <div id="nav-item">
        <a href="/"><i class="fas fa-home fa-fw"></i>首頁</a>
        <a href="/"><i class="fas fa-home fa-fw"></i>說明</a>
        <a href="/"><i class="fas fa-home fa-fw"></i>關於</a>
      </div>
    </nav>



    <%= render "layouts/alert" %>
    <%= render "layouts/notice" %>
    <% if alert or notice%>
      <script>
        $('.toast').toast({
          delay: 3000,
          animation: true,
        })
        $('.toast').toast('show')
      </script>
    <% end %>
    <%= yield %>
  </body>
</html>
