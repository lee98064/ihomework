<% provide :web_title, "所有公告" %>

<div class="container" style="padding: 20px;">

	<% @posts.each do |post| %>
		<div class="uk-card uk-card-default uk-card-body uk-width-1-2@m" onclick="location.href='<%= classroom_post_path(@classroom,post) %>'">
		    <h3 class="uk-card-title"><%= post['title']%></h3>
		    <span><%= post.user.try(:uname)[-3..-1]%></span>
		    <p><%= simple_format(post['content']) %></p>
		</div>
	<% end %>
</div>
